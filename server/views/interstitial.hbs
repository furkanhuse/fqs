<!DOCTYPE html>
<html>
<head>
  <title>Redirecting...</title>
  <style>
    body {
      margin: 0;
      padding: 0;
      background: url("/images/background.jpg") no-repeat center center fixed;
      background-size: cover;
      font-family: Arial, sans-serif;
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
    }

    .container {
      background-color: rgba(0, 0, 0, 0.7);
      padding: 30px;
      border-radius: 12px;
      text-align: center;
      max-width: 400px;
    }

    button {
      margin-top: 20px;
      padding: 10px 20px;
      background-color: #28a745;
      border: none;
      color: white;
      font-size: 16px;
      border-radius: 6px;
      cursor: pointer;
    }

    #step2 {
      display: none;
    }

    #final {
      display: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>One more step to continue</h2>

    <div id="step1">
      <p>Click to continue</p>
      <button onclick="goToStep2()">Continue</button>
    </div>

    <div id="step2">
      <p>Wait <span id="timer1">15</span> seconds...</p>
    </div>

    <div id="final">
      <button onclick="redirectNow()">Go to Link</button>
    </div>
  </div>

  <script>
    const destination = "{{destination}}";

    function goToStep2() {
      document.getElementById('step1').style.display = 'none';
      document.getElementById('step2').style.display = 'block';

      let timeLeft = 15;
      const timer = setInterval(() => {
        timeLeft--;
        document.getElementById('timer1').innerText = timeLeft;
        if (timeLeft <= 0) {
          clearInterval(timer);
          document.getElementById('step2').style.display = 'none';
          document.getElementById('final').style.display = 'block';
        }
      }, 1000);
    }

    function redirectNow() {
      window.location.href = destination;
    }
  <script>
  function wrongClick() {
    alert("Wrong button! Try again.");
  }

  function redirect() {
    const target = "{{url}}"; // This comes from url.js
    if (target) {
      window.location.href = target;
    }
  }
</script>
</body>
</html>

